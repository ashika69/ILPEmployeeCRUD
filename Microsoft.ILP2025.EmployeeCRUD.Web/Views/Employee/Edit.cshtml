@model Microsoft.ILP2025.EmployeeCRUD.Entities.EmployeeEntity
<h2>Edit Employee</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Name</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Department</label>
        <input asp-for="Department" />
    </div>
    <div>
        <label>Age</label>
        <input asp-for="Age" />
    </div>
     <div>
        <label>Salary</label>
        <input asp-for="Salary" />
    </div>
    <button type="submit">Update</button>
</form>
